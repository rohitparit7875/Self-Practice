#!/bin/bash

# Source folder and backup destination
SRC="/home/user/mydata"
DEST="/home/user/backups"
DATE=$(date +%F)

# Create backup directory if not exists
mkdir -p "$DEST"

# Create a compressed backup
tar -czf "$DEST/backup-$DATE.tar.gz" "$SRC"

echo "Backup completed for $SRC at $DEST/backup-$DATE.tar.gz"
